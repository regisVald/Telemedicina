<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/doctorProfileImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/doctorProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/doctorProfileImage"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Nombre del Doctor"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/doctorProfileSpecialty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/doctorProfileName"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:text="Especialidad"
        android:textColor="#3F51B5"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/doctorProfileEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/doctorProfileSpecialty"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:text="Email"
        android:textColor="#757575"
        android:textSize="18sp" />

    <Button
        android:id="@+id/buttonMakeAppointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/doctorProfileEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Hacer Cita"
        android:backgroundTint="#3F51B5"
        android:textColor="#FFFFFF"
        android:padding="12dp"/>
</RelativeLayout>
