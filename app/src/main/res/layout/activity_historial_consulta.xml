                    android:text="Estado"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:textColor="#000000"/>
            </TableRow>

            <!-- Filas con datos de prueba -->
