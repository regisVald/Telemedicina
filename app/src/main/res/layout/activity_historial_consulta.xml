                    android:padding="10dp"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024-03-19"
                    android:padding="10dp"
                    android:textColor="#000000"/>
            </TableRow>

            <!-- Filas adicionales con datos de prueba -->
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:padding="10dp"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
